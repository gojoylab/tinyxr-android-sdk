<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tinyxr.xr.glasssuite.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Response:"/>
            <TextView
                android:id="@+id/response"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="..."/>

            <Button
                android:id="@+id/get_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onGetVersionClick"
                android:text="Get Version" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brightness Setting" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/lum120"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="120"
                android:layout_weight="1"
                android:onClick="onLumButtonClick"/>
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/lum300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="300"
                android:layout_weight="1"
                android:onClick="onLumButtonClick"/>
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/lum500"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500"
                android:onClick="onLumButtonClick"/>
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/lum1500"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1500"
                android:onClick="onLumButtonClick"/>
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/lum3000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3000"
                android:onClick="onLumButtonClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/usb_sensor_on"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:text="Enable Sensors"
                android:onClick="onEnableUSBSensorsClick"/>
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/usb_sensor_off"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:text="Disable Sensors"
                android:onClick="onDisableUSBSensorsClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/head_track_on"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:text="Enable Head Tracking"
                android:onClick="onEnableHeadTrackingClick"/>
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/head_track_off"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:text="Disable Head Tracking"
                android:onClick="onDisableHeadTrackingClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acc:"/>
            <TextView
                android:id="@+id/acc_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="..."/>
